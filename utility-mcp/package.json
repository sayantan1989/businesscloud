{
  "name": "mcp-calculator-server",
  "version": "1.0.0",
  "description": "MCP Calculator Server with HTTP transport",
  "type": "module",
  "scripts": {
    "server": "tsx server.ts",
    "client": "tsx client.ts",
    "client:advanced": "tsx client-advanced.ts",
    "agent": "tsx agent.ts",
    "agent:interactive": "tsx agent-interactive.ts",
    "dev": "tsx watch server.ts",
    "cp": "copyfiles src/resources/**/* package*.json dist/",
    "tsc:prod": "tsc -p tsconfig.json",
    "build:prod": "npm-run-all --sequential tsc:prod cp",
    "start:local": "cross-env NODE_ENV=LOCAL node ./dist/server.js",
    "start:prod":"cross-env NODE_ENV=PROD node ./dist/server.js"
  },
  "dependencies": {
    "@langchain/core": "^0.3.78",
    "@langchain/langgraph": "^0.2.28",
    "@langchain/openai": "^0.3.17",
    "@mastra/mcp": "^0.13.3",
    "@modelcontextprotocol/sdk": "^1.19.1",
    "cross-env": "^10.1.0",
    "dotenv": "^16.4.5",
    "express": "^4.21.2",
    "langchain": "^0.3.35",
    "mcp-typescript-sdk": "^2.0.1",
    "openai": "^6.1.0",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@types/express": "^5.0.0",
    "@types/node": "^25.0.0",
    "copyfiles": "^2.4.1",
    "npm-run-all": "^4.1.5",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2"
  }
}